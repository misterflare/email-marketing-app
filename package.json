    "react-hook-form": "^7.55.0",
    "react-router-dom": "^6.30.0",
    "tailwindcss": "^4.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  }
